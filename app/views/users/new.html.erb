<div class="col-md-8 offset-md-2 mt-5">
  <div class="user-box">
    <h1 class="text-center">新規登録</h1>
    <%= form_with url: users_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :nick_name, 'ニックネーム' %>
        <%= f.text_field :nick_name, class: 'form-control' %>
      </div>
      <%= f.submit '登録する', class: 'btn btn-outline-primary mb-2' %>
    <% end %>
      <%= link_to 'ユーザー一覧', root_path, class: 'btn btn-outline-primary' %>
  </div>
</div>

